{
  "$schema": "https://schema.tauri.app/config/2.1.0",
  "productName": "Wallora",
  "version": "1.0.0",
  "identifier": "com.wallora.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": ["icons/wallora.ico", "icons/wallora.png"],
    "category": "Utility",
    "publisher": "Wallora",
    "copyright": "Copyright Â© 2025",
    "shortDescription": "Wallora brings beautiful wallpapers and a clock overlay to your desktop.",
    "longDescription": "Wallora is a beautiful desktop app for managing wallpapers and adding a stunning always-on clock overlay.",
    "homepage": "https://github.com/riteshk-611/wallora",
    "licenseFile": "../LICENSE",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper", 
        "silent": true
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/wallora.ico",
        "headerImage": "icons/headerImg.bmp",
        "sidebarImage": "icons/sidebarImg.bmp",
        "startMenuFolder": "Wallora",
        "installMode": "perMachine",
        "displayLanguageSelector": true,
        "languages": [
          "english",
          "german",
          "french",
          "spanish",
          "russian",
          "japanese",
          "korean",
          "simpchinese",
          "tradchinese"
        ]
      },
      "wix": {
        "language": "en-US",
        "template": null,
        "bannerPath": "icons/bannerImg.bmp",
        "dialogImagePath": "icons/sidebarImg.bmp",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      }
    },
    "resources": ["icons/wallora.png"],
    "externalBin": [],
    "createUpdaterArtifacts": false
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Wallora",
        "width": 800,
        "height": 500,
        "minWidth": 800,
        "minHeight": 500,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true,
        "closable": false,
        "maximizable": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {}
}
