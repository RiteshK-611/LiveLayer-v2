{
  "$schema": "https://schema.tauri.app/config/2.1.0",
  "productName": "LiveLayer",
  "version": "1.0.0",
  "identifier": "com.livelayer.wallpaper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "category": "Utility",
    "shortDescription": "Premium wallpaper experience",
    "longDescription": "A premium wallpaper manager with dynamic backgrounds, live videos, and customizable widgets",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US",
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      }
    },
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "licenseFile": "",
    "createUpdaterArtifacts": false
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LiveLayer",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {}
}
